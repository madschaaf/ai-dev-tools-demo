<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output method="html"/>
    <xsl:include href='PageLayout.xsl'/>

    <xsl:template match="/">
        <xsl:call-template name='page-layout'>
            <xsl:with-param name='root-node' select="ValidateInternals"/>
            <xsl:with-param name='title-text' select="'Administration Console'"/>
        </xsl:call-template>
    </xsl:template>

    <xsl:template name='page-content'>
        <xsl:if test="count(ValidateInternals/Component) > 1">
            <div class="page_nav_wrapper">
            <div class="page_nav"><div>Go to</div>
                <ul>
                <xsl:apply-templates select="ValidateInternals/Component" mode="page_navigation" />
                </ul>
            </div>
            </div>
        </xsl:if>
        <xsl:apply-templates select="ValidateInternals/Component"/>
    </xsl:template>

    <xsl:template match="Component[contains(@name, 'Cookielet Stats')]">
        <div id='CookieletStatsDetailTable_title' class="table_title">Cookielet Stats</div>
        <table id="CookieletStatsDetailTable" class="display componentTable">
            <thead>
            <tr>
                <th class="left" >ID</th>
                <th class="left" >ID Name</th>
                <th class="left" >Name</th>
                <th class="left" >Read</th>
                <th class="left" >Written</th>
                <th class="left" >Removed</th>
            </tr>
            </thead>
            <tbody>
            <xsl:apply-templates select="Properties/Property"/>
            </tbody>
        </table>
    </xsl:template>
    <xsl:template match="Component[contains(@name, 'Cookie Stats')]">
        <div id='CookieStatsDetailTable_title' class="table_title">Cookie Stats</div>
        <table id="CookieStatsDetailTable" class="display componentTable">
            <thead>
            <tr>
                <th class="left" >ID</th>
                <th class="left" >ID Name</th>
                <th class="left" >Name</th>
                <th class="left" >Received</th>
                <th class="left" >Sent</th>
                <th class="left" >Deleted</th>
            </tr>
            </thead>
            <tbody>
            <xsl:apply-templates select="Properties/Property"/>
            </tbody>
        </table>
    </xsl:template>
    <xsl:template match="Properties/Property">
        <tr>
            <td><xsl:value-of select="@id" /></td>
            <td><xsl:value-of select="@idName" /></td>
            <td><xsl:value-of select="@name" /></td>
            <td><xsl:value-of select="@read" /></td>
            <td><xsl:value-of select="@send" /></td>
            <td><xsl:value-of select="@delete" /></td>
        </tr>
    </xsl:template>
</xsl:stylesheet>
