{
    "$id": "https://github.corp.ebay.com/nodejs/site-meta-resources-ebay/blob/main/schema/localized-lists.json",
    "type": "object",
    "required": ["countries"],
    "additionalProperties": false,
    "properties": {
        "countries": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/country"
            }
        },
        "nationalities": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/country"
            }
        },
        "states": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/state"
            }
        }
    },
    "$defs": {
        "country": {
            "type": "object",
            "additionalProperties": false,
            "required": ["code", "token", "text", "translatedtext"],
            "properties": {
                "code": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "translatedtext": {
                    "type": "string"
                }
            }        
        },
        "state": {
            "type": "object",
            "additionalProperties": false,
            "required": ["code", "token", "text", "translatedtext"],
            "properties": {
                "code": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "translatedtext": {
                    "type": "string"
                }
            }        
        }
    }
}