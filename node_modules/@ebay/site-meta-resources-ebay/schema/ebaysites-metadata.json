                },
                "locale": {
                    "type": "string"
                },
                "area": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "roverRotationId": {
                    "type": "string"
                },
                "partner": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
