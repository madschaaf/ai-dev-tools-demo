{
    "tracing": {
        "enabled": true,
        "queueSize": 1000,
        "ssl": false,
        "flushDelayInMillis": 10000,
        "samplePercent": 100,
        "collectorEnabled": true,
        "debug": false,
        "endpoints": {
            "default": "grpc://monitoring-trace-collector.istio-production.svc.%s.tess.io:4317",
            "secure": "grpc://trace-collector-%s.vip.ebay.com:443"
        },
        "instrumentations": {
            "graphql": {
                "enabled": false,
                "module": "@opentelemetry/instrumentation-graphql",
                "constructorName": "GraphQLInstrumentation",
                "config": {
                    "allowAttributes": true,
                    "depth": 2,
                    "mergeItems": true
                }
            }
        }
    },

    "@ConfigBean": {
        "opentelemetry-ebay": {
            "general": [
                "tracing"
            ]
        }
    },

    "@RaptorConfig": {
        "opentelemetry-ebay": [
            {
                "target": "Global",
                "project": "opentelemetrynodejs",
                "config": "opentelemetryconfig",
                "version": "2.0.0",
                "keyPath": "tracing"
            }
        ]
    }
}
