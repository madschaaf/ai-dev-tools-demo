{
    "cal-publishing-inc": {
        "appenders": {
            "console": {
                "enabled": true,
                "module": "./appenders/console"
            },
            "log4js": {
                "enabled": false,
                "module": "./appenders/log4js",
                "config": {
                    "appenders": {
                        "logfile": {
                            "type": "file",
                            "filename": "pid:logs/log-{pid}.log",
                            "maxLogSize": 2097152,
                            "backups": 10
                        }
                    },
                    "categories": {
                        "default": {
                            "appenders": [
                                "logfile"
                            ], 
                            "level": "error"
                        }
                    }
                }
            }
        }
    }
}
