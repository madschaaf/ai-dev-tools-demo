{
  "name": "@ebay/utils",
  "version": "2.0.2",
  "description": "A Node utility library for handling common tasks",
  "main": "utils.js",
  "repository": {
    "type": "git",
    "url": "git@github.corp.ebay.com:wonderland/node-utils.git"
  },
  "author": "Jonathan Calvin <jocalvin@ebay.com>",
  "contributors": [
    "Shobith Alva <salva@ebay.com>",
    "Andrew Chalkley <achalkley@ebay.com>"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf .nyc_output coverage",
    "coverage": "npm run clean && nyc npm run test",
    "lint": "eslint . -o .eslint-checkstyle.xml -f checkstyle -c .eslintrc",
    "lint-dev": "eslint .",
    "lintfix": "eslint . --fix",
    "show-coverage": "open coverage/nyc/lcov-report/index.html",
    "test": "mocha ./test --reporter mocha-multi-reporters --reporter-options configFile=mocha-multi-reporters.json --recursive --timeout 10s --exit"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-ebay": "^1.0.0",
    "eslint-plugin-mocha": "^5.3.0",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.22.0",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^14.1.1"
  },
  "publishConfig": {
    "registry": "https://artifactory.corp.ebay.com/artifactory/api/npm/npm-wonderland/"
  },
  "pre-commit": [
    "lint-dev",
    "test"
  ],
  "engines": {
    "node": ">=16"
  }
}