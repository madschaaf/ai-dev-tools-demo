{
    "services": {
        "trust-fabric-service": {
            "dnslookup": false,
            "requestCert": false,
            "rejectUnauthorized": false,
            "protocol": "https:",
            "hostname": "trustfabric.vip.ebay.com",
            "transport": "generic",
            "method": "POST",
            "retry": 3,
            "force-retry": true,
            "trust-fabric": false,
            "socketTimeout": 3000,
            "circuit": {
                "circuitBreakerErrorThresholdPercentage": 100
            },
            "headers": {
                "Content-Type": "application/x-www-form-urlencoded"
            },
            "https": "eBayRootCert",
            "instruments": ["https","error-handler", "retry", "config-bean", "cal"]
        },

        "trust-fabric-service-qa-getkey": {
            "dnslookup": false,
            "requestCert": false,
            "rejectUnauthorized": false,
            "protocol": "https:",
            "hostname": "trustfabricqa.vip.ebay.com",
            "transport": "generic",
            "method": "GET",
            "retry": 3,
            "trust-fabric": false,
            "socketTimeout": 10000,            
            "https": "eBayRootCert",
            "instruments": ["https","error-handler", "retry", "config-bean", "cal"]
        },

        "trust-fabric-service-getkey": {
            "dnslookup": false,
            "requestCert": false,
            "rejectUnauthorized": false,
            "protocol": "https:",
            "hostname": "trustfabric.vip.ebay.com",
            "transport": "generic",
            "method": "GET",
            "retry": 3,
            "trust-fabric": false,
            "socketTimeout": 10000,            
            "https": "eBayRootCert",
            "instruments": ["https","error-handler", "retry", "config-bean", "cal"]
        },

        "cmpaas-grantfile-service": {
            "dnslookup": false,
            "requestCert": false,
            "rejectUnauthorized": false,
            "protocol": "https:",
            "hostname": "deploy.altus.vip.ebay.com",
            "basepath": "/swdeploy/v1/TrustFabricGrant",
            "transport": "generic",
            "method": "POST",
            "retry": 3,
            "force-retry": true,
            "trust-fabric": false,
            "socketTimeout": 10000, 
            "headers": {
                "Content-Type": "application/x-www-form-urlencoded"
            },           
            "https": "eBayRootCert",
            "instruments": ["https","error-handler", "retry", "config-bean", "cal"]
        },

        "trust-fabric-whitelist": {
            "urn": "urn:REST:spellcaster",
            "dnslookup": false,
            "requestCert": false,
            "rejectUnauthorized": false,
            "trust-fabric": false,
            "protocol": "https:",
            "hostname": "spellcaster.vip.ebay.com",
            "basepath": "/v1/api/client-apps/",
            "transport": "generic",
            "method": "GET",
            "retry": 1,
            "socketTimeout": 1000,
            "https": "eBayRootCert",
            "instruments": ["https","error-handler", "retry", "config-bean", "cal"]
        }
    },
    "refreshFailRetry": 30000,
    "maxGrantRetry": 5,
    "grantFileStatusTimeout": 1000,

    "trust-fabric-ebay": {        
        "propagateHeaders": {
            "enabled": true,            
            "refreshInterval": 21600
        },
        "interceptHeaders": {
            "enabled": true,
            "mode": "disabled"
        },
        "trf-ip-check": {
            "disabled": true,
            "fallback": true
        },
        "forceRefresh": false
    },

    "@ConfigBean": {
        "trust-fabric-ebay": {
            "common": [                
                "trust-fabric-ebay"
            ]
        }
    }
}
