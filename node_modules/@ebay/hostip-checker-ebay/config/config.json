{
    "authSvc": {
        "cache": {
            "max": 2000,          //Max cache size
            "maxAge": 86400000        //Max Age (30 mins)
        }
    },
    "qualyscan": {
        "enabled": true,
        "refreshTimeout": 86400000   // 24 hours
    },
    "services": {
        "authSvc": {
            "urn": "urn:REST:authzsvc",
            "rejectUnauthorized": false,
            "socketTimeout": 3000,
            "maxKeepAliveTime": 5000,
            "dnslookup": false,
            "protocol": "https:",
            "hostname": "authzsvc-tls.vip.ebay.com",
            "basepath": "/authzsvc/api/v1/getacl",
            "transport": "generic",
            "method": "GET",
            "instruments": ["error-handler", "retry", "config-bean", "cal"]
        },
        "qualyIpSvc": {
            "urn": "urn:REST:authzsvc",
            "rejectUnauthorized": false,
            "socketTimeout": 3000,
            "dnslookup": false,
            "protocol": "https:",
            "hostname": "authzsvc-tls.vip.ebay.com",
            "basepath": "/authzsvc/api/v1/getqualysips",
            "transport": "generic",
            "method": "GET",
            "instruments": ["error-handler", "retry", "config-bean", "cal"]
        },
        "qualyHeaderSvc": {
            "urn": "urn:REST:authzsvc",
            "rejectUnauthorized": false,
            "socketTimeout": 3000,
            "dnslookup": false,
            "protocol": "https:",
            "hostname": "authzsvc-tls.vip.ebay.com",
            "basepath": "/authzsvc/api/v1/getqualysheader",
            "transport": "generic",
            "method": "GET",
            "instruments": ["error-handler", "retry", "config-bean", "cal"]
        }
    },

    "@ConfigBean": {
        "hostip-checker-ebay": {
            "commons": [
                "authSvc",
                "qualyscan"
            ]
        }
    }
}
