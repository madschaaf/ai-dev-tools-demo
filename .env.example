# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_dev_tools
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3000

# eBay App Context (Optional)
# EBAY_APP_ID=your_app_id_here

# AI Service Configuration (for step generation)
# Choose one: openai, anthropic, azure
VITE_AI_SERVICE=openai

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic/Claude Configuration (alternative)
# VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Azure OpenAI Configuration (alternative)
# VITE_AZURE_OPENAI_API_KEY=your_azure_api_key_here
# VITE_AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here

# eBay AI Sandbox Configuration
# Environment: staging, preprod, or production
VITE_AI_SANDBOX_ENV=staging

# eBay Authentication Token (required for AI Sandbox)
# Get from: https://developer.ebay.com/my/keys
VITE_EBAY_AUTH_TOKEN=your_ebay_auth_token_here

# AI Sandbox Notes:
# - You need to file an AI Intake ticket to use these capabilities in PRODUCTION
# - Machine Translation, Language Detection, Title Rewrite, etc. available in Staging/Preprod/Production
# - Text-to-Image (SDXL) available in Preprod/Production only
# - Background Swap available in Preprod only
# Documentation: https://github.com/aisandbox
